<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.RoomDialogController">
    <children>
        <GridPane hgap="10" vgap="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="284.0" minWidth="10.0" prefWidth="105.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="499.0" minWidth="10.0" prefWidth="410.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Number:" />
                <TextField fx:id="numberField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Nome:" GridPane.rowIndex="1" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Andar:" GridPane.rowIndex="2" />
                <TextField fx:id="floorField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Descrição:" GridPane.rowIndex="3" />
                <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Dimensão:" GridPane.rowIndex="4" />
                <TextField fx:id="dimensionField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="Tipo de quarto:" GridPane.rowIndex="5" />
                <ComboBox fx:id="roomTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <!-- Adicionar botões -->
                <Button text="Confirmar" onAction="#handleOKButton" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2" />
            </children>
        </GridPane>
    </children>
</AnchorPane>
