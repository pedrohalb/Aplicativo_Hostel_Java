<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane fx:id="anchorPane" prefHeight="200" prefWidth="300" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ReservationDialogController">

    <!-- Estilos -->
    <stylesheets>
        <URL value="@style.css"/> <!-- Importa a folha de estilos externa -->
    </stylesheets>

    <DatePicker fx:id="checkinDatePicker" layoutX="10" layoutY="20" prefWidth="280" />
    <DatePicker fx:id="checkoutDatePicker" layoutX="10" layoutY="60" prefWidth="280" />

    <Button fx:id="confirmButton" text="Confirmar" onAction="#handleOKButton" layoutX="60" layoutY="120" prefWidth="80" prefHeight="30" />
</AnchorPane>
